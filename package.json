{
  "name": "nodejs-typescript-template",
  "version": "0.0.2",
  "description": "Template to start developing a REST API with Node.js and TypeScript",
  "repository": "git@github.com:gravinawill/nodejs-typescript-template.git",
  "license": "MIT",
  "author": "Will Gravina <dev.gravinawilliam@gmail.com>",
  "main": "./dist/main/server.js",
  "scripts": {
    "build": "tsup src",
    "check:format": "prettier --check .",
    "check:lint": "eslint . --color",
    "check:markdown": "markdownlint '**/*.md' '.github/**/*.md'",
    "check:packagejson": "npmPkgJsonLint .",
    "check:spelling": "cspell .",
    "check:staged": "lint-staged",
    "check:types": "tsc --pretty --noEmit",
    "commit": "cz",
    "danger:ci": "danger ci",
    "fix:format": "prettier --check --write --ignore-unknown .",
    "fix:lint": "npm run check:lint -- --fix",
    "prepare": "husky install",
    "prepare-release": "run-s reset-hard version",
    "prisma:generate": "prisma generate",
    "prisma:generate:watch": "prisma generate --watch",
    "prisma:migrate": "prisma migrate dev --skip-seed",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm install",
    "start:dev": "tsx watch src/main/server.ts",
    "start:prod": "node ./dist/main/server.js",
    "test": "cross-env NODE_ENV=test DESTROY_SOCKETS=true jest --verbose --colors --detectOpenHandles --runInBand --forceExit",
    "test:unit": "npm run test -- --testPathPattern=unit",
    "test:int": "npm run test -- --testPathPattern=integration",
    "test:e2e": "npm run test -- --testPathPattern=e2e",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage --silent",
    "version": "standard-version -t"
  },
  "dependencies": {
    "@prisma/client": "^5.5.2",
    "cookie-parser": "^1.4.6",
    "danger": "^11.3.0",
    "dotenv-defaults": "^5.0.2",
    "dotenv-expand": "^10.0.0",
    "dree": "^4.5.6",
    "endent": "^2.1.0",
    "express": "^4.18.2",
    "figlet": "^1.7.0",
    "github-emoji": "^1.2.0",
    "helmet": "^7.0.0",
    "http-graceful-shutdown": "^3.1.13",
    "morgan": "^1.10.0",
    "read-pkg": "5.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@cspell/dict-bash": "^4.1.2",
    "@cspell/dict-companies": "^3.0.26",
    "@cspell/dict-es-es": "^2.2.7",
    "@cspell/dict-filetypes": "^3.0.1",
    "@cspell/dict-html": "^4.0.5",
    "@cspell/dict-lorem-ipsum": "^4.0.0",
    "@cspell/dict-node": "^4.0.3",
    "@cspell/dict-npm": "^5.0.12",
    "@cspell/dict-software-terms": "^3.3.9",
    "@cspell/dict-typescript": "^3.1.2",
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@types/cookie-parser": "^1.4.5",
    "@types/dotenv-defaults": "^2.0.3",
    "@types/express": "^4.17.20",
    "@types/figlet": "^1.5.7",
    "@types/jest": "^29.5.6",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cspell": "^7.3.8",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-jsonc": "^2.10.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sonarjs": "^0.21.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint-plugin-yml": "^1.10.0",
    "get-tsconfig": "^4.7.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^15.0.2",
    "markdownlint": "^0.31.1",
    "markdownlint-cli": "^0.37.0",
    "npm-package-json-lint": "^7.0.0",
    "npm-package-json-lint-config-default": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-packagejson": "^2.4.6",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.5.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "yaml-eslint-parser": "^1.2.2"
  },
  "engines": {
    "node": "20.9.0"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
